
@{
    Layout = null;
}

@{ 
    string titulo = "Pagina principal";
    int dia = DateTime.Now.Day;
    int mes = DateTime.Now.Month;
    int anio = DateTime.Now.Year;
    string cadena;

    if (dia > 15)
    {
        cadena = "Estamos en la segunda parte del mes";
    }
    else
    {
        cadena = "Estamos en la primer quincena.";
    }
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>@titulo</h1>
        <p>Fecha:@dia/@mes/@anio</p>
        <p>@cadena</p>
    </div>
</body>
</html>
